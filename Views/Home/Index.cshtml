@model Artist;
@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <div class="section d-flex flex-column justify-content-center">
        <div >
            <h1>@Model.Name</h1>
        </div>
        <div>
            <img src="@Model.Images[2].URL" style="width:250px" />
        </div>

    </div>
    
    <div class="section">
        <h1 class="section-title">Genres</h1>
        @foreach (var item in Model.Genres)
        {
            <span class="badge bg-success">@item</span>
        }
    </div>

    <div class="section">
        <h1 class="section-title">Albums</h1>
        <div class="row">
            <div class="col">
                <partial name="_AlbumList" model="@Model.Albums.Items"></partial>
            </div>
        </div>
    </div>
</div>


