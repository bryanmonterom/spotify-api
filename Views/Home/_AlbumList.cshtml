@using spotify_api.DTO;
@model IEnumerable<AlbumItem>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string DefineColor(DateTime date)
    {

        if (date.Year % 3 == 0 && date.Year % 5 == 0)
        {
            return  "#eeffee";
        }
        else if (date.Year % 3 == 0)
        {
            return "#ffeeee";
        }
        else if (date.Year % 5 == 0)
        {
            return "#eeeeff";
        }
        return "";
    }
}

<div class="container-sm">
    <div class="d-flex justify-content-center">
            @foreach (var item in Model)
            {
                @*var color = DefineColor(item.Release_Date);*@
                
                <div class="card" style="width: 18rem; margin:2px">
                    <img class="card-img-top" src="@item.Images[0].URL" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" style="background-color: @DefineColor(item.ReleaseDate)">Release date: @item.ReleaseDate.ToShortDateString()</li>
                        <li class="list-group-item">Total tracks: @item.Total_Tracks</li>
                        @*<li class="list-group-item">Vestibulum at eros</li>*@
                    </ul>
                    @*  <div class="card-body">
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
                </div>*@
                </div>
            }
    </div>
</div>

